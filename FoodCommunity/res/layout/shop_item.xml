<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >
    <ImageView android:id="@+id/shop_item_image"
        android:src="@drawable/logingicon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"/>
    <LinearLayout android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/shop_item_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="周黑鸭(张江店)"/>
        <TextView
            android:id="@+id/shop_item_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="上海浦东新区中科路1001号"/>
    </LinearLayout>
    <TextView android:id="@+id/shop_item_like"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="LIKE"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/blue"/>

</LinearLayout>
