<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.seu.community.RegisterActivity" >

    <include layout="@layout/toolbar"/>
    
    <LinearLayout 
        android:id="@+id/register_page_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <TextView android:id="@+id/register_page_sex_male"
            android:text="男"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/yellow"/>
        
        <TextView android:id="@+id/register_page_sex_female"
            android:text="女"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="#000000"
            android:padding="10dp"
            android:gravity="center"
            android:background="#dddddd"/>
    </LinearLayout>
    
    <EditText android:id="@+id/register_page_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="23sp"
        android:layout_margin="10dp"
        android:inputType="text"
        android:hint="请输入用户名"/>
    
    <EditText android:id="@+id/register_page_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="23sp"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:hint="请输入密码"/>
    
    <EditText android:id="@+id/register_page_re_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="23sp"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:hint="重复密码"/>
    
    <EditText android:id="@+id/register_page_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="23sp"
        android:layout_margin="10dp"
        android:inputType="textEmailAddress"
        android:hint="输入注册邮箱"/>

</LinearLayout>
