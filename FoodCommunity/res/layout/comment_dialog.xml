<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
    
    <ImageView
        android:id="@+id/comment_dialog_quit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:layout_centerVertical="true"
        android:src="@drawable/quit"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="我要评价"
        android:textSize="20sp"/>
    
    <ImageView
        android:id="@+id/comment_dialog_submit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/submit"/>
    
    </RelativeLayout>
    
    <LinearLayout android:id="@+id/comment_dialog_score_contain"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >
        <LinearLayout android:id="@+id/comment_dialog_score_images" 
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
            <TextView android:id="@+id/comment_dialog_score_image1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:text="1"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/blue"/>
            <TextView android:id="@+id/comment_dialog_score_image2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="2"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@color/blue"/>
            <TextView android:id="@+id/comment_dialog_score_image3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="3"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@color/blue"/>
            <TextView android:id="@+id/comment_dialog_score_image4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="4"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@color/blue"/>
            <TextView android:id="@+id/comment_dialog_score_image5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="5"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@color/blue"/>
        </LinearLayout>
        <TextView android:id="@+id/comment_dialog_score_result"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:text="等级：有用" />
    </LinearLayout>
    
    <EditText
        android:id="@+id/comment_dialog_comment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:minLines="2"
        android:gravity="top"
        android:background="@drawable/bg_edittext"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:padding="7dp"
        android:hint="输入评价内容"/>
    

</LinearLayout>
