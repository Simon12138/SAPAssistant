<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.seu.community.LoginActivity" >
    
    <ImageView android:id="@+id/login_page_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logingicon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>
    
    <EditText
        android:id="@+id/login_page_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入用户名"
        android:text="haha"
        android:textSize="23sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    
    <EditText
        android:id="@+id/login_page_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:text="123456"
        android:inputType="textPassword"
        android:textSize="23sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    
    <Button
        android:id="@+id/login_page_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="登 录"
        android:background="#00dddd"
        android:layout_marginTop="20dp"
        />
    
    <Button
        android:id="@+id/login_page_register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="注册账号"
        android:background="#F6BA5A"
        android:layout_marginTop="10dp"
        />

</LinearLayout>
